<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.2"/>
  </startup>
  <system.serviceModel>
      <bindings>
          <basicHttpBinding>
              <binding name="IronMacbethBinding"
                       hostNameComparisonMode="StrongWildcard"
                       receiveTimeout="00:10:00"
                       sendTimeout="00:10:00"
                       openTimeout="00:10:00"
                       closeTimeout="00:10:00"
                       maxReceivedMessageSize="10485760"
                       maxBufferSize="10485760"
                       maxBufferPoolSize="20971520"
                       transferMode="Buffered"
                       messageEncoding="Text"
                       textEncoding="utf-8"
                       bypassProxyOnLocal="false"
                       useDefaultWebProxy="true">
                  <security mode="None" />
              </binding>
          </basicHttpBinding>
      </bindings>
    <client>
      <endpoint address="http://localhost:9998/WCFService" binding="basicHttpBinding" bindingConfiguration="IronMacbethBinding" contract="IronMacbeth.BFF.Contract.IService" name="IronMacbeth.BFF.Endpoint"/>
    </client>
  </system.serviceModel>
</configuration>
