<UserControl x:Class="IronMacbeth.Client.VVM.SellableItemUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IronMacbeth.Client.VVM"
             mc:Ignorable="d" 
             d:DesignHeight="56" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="56"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Image
            Width="50"
            Grid.Column="0"
            Source="{Binding BitmapImage}" 
            Margin="3"/>

        <TextBlock 
            Grid.Column="1" 
            Margin="5" 
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Text="{Binding Name}"/>

        <TextBlock 
            Margin="5" 
            Grid.Column="2" 
            Text="{Binding SellableType}"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"/>
    </Grid>
</UserControl>
