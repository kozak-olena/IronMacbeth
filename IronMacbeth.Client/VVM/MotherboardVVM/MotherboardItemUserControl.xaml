<UserControl x:Class="IronMacbeth.Client.VVM.MotherboardVVM.MotherboardItemUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IronMacbeth.Client.VVM.MotherboardVVM"
             mc:Ignorable="d" 
             d:DesignHeight="140" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="110"/>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="140"/>
        </Grid.ColumnDefinitions>
        <Image
            Grid.Column="0"
            Source="{Binding BitmapImage}"
            Width="100" 
            Margin="5,5,0,5" 
            HorizontalAlignment="Left"/>
        <WrapPanel Margin="5,0,0,0" Grid.Column="2" Orientation="Vertical">
            <WrapPanel>
                <Label 
                    Content="{Binding AveragePrice}" 
                    Margin="10,10,0,0"
                    Foreground="CornflowerBlue" 
                    FontWeight="Bold"
                    FontSize="13"/>
                <Label
                    Content="₴"
                    Margin="5,10,0,0"
                    Foreground="CornflowerBlue" 
                    FontWeight="Bold"
                    FontSize="13"/>
            </WrapPanel>
            <WrapPanel>
                <Label 
                    Content="{Binding MinPrice}" 
                    Margin="10,0,0,0"
                    FontSize="13"/>
                <Label
                    Content="-"
                    Margin="5,0,5,0"
                    FontSize="13"/>
                <Label 
                    Content="{Binding MaxPrice}" 
                    FontSize="13"/>
                <Label
                    Content="₴"
                    Margin="5,0,0,0"
                    FontSize="13"/>
            </WrapPanel>
            <WrapPanel Margin="0,5,0,0">
                <Label 
                    Content="{Binding NumberOfOfferings}" 
                    Margin="10,0,5,0"
                    FontSize="10"
                    Foreground="DimGray"/>
                <Label 
                    Content="offerings" 
                    Margin="0,0,5,0"
                    FontSize="10"
                    Foreground="DimGray"/>
                <Button
                    Width="120"
                    Content="More"
                    Margin="10,10,0,0" 
                    Height="25"
                    Command="{Binding DataContext.ChangePageCommand, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Window}}}"
                    CommandParameter="{Binding MoreInfoVm}"/>
            </WrapPanel>
        </WrapPanel>
        <WrapPanel
            Orientation="Vertical"
            Grid.Column="1">
            <WrapPanel Orientation="Horizontal">
                <TextBlock 
                    Margin="0,10,5,0"
                    Text="{Binding Model}"
                    Foreground="CornflowerBlue" 
                    FontWeight="Bold" 
                    FontSize="13"/>
                <TextBlock 
                    Margin="0,10,0,0"
                    Text="{Binding MPN}"
                    Foreground="CornflowerBlue" 
                    FontWeight="Bold" 
                    FontSize="13"/>
            </WrapPanel>
            <WrapPanel Margin="0,10,0,0">
                <Label Margin="0,0,5,0" Content="Motherboard" FontSize="13" Foreground="DimGray"/>
                <Label Content="•" FontSize="13" Foreground="DimGray"/>
                <Label Margin="5,0,5,0" Content="{Binding CPUSocket}" FontSize="13" Foreground="DimGray"/>
                <Label Content="•" FontSize="13" Foreground="DimGray"/>
                <Label Margin="5,0,5,0" Content="{Binding Northbridge}" FontSize="13" Foreground="DimGray"/>
                <Label Margin="5,0,0,0" Content=" / " FontSize="13" Foreground="DimGray"/>
                <Label Margin="5,0,5,0" Content="{Binding Southbridge}" FontSize="13" Foreground="DimGray"/>
            </WrapPanel>
            <WrapPanel>
                <Label Content="{Binding GraphicalInterface}" Margin="5,0" FontSize="13" Foreground="DimGray"/>
                <Label Content="•" FontSize="13" Foreground="DimGray"/>
                <Label Content="{Binding DIMM}" Margin="5,0,0,0" FontSize="13" Foreground="DimGray"/>
                <Label Content="GB" FontSize="13" Foreground="DimGray"/>
                <Label Content="•" FontSize="13" Foreground="DimGray"/>
                <Label Margin="0,0,5,0" Content="LAN:" FontSize="13" Foreground="DimGray"/>
                <Label Content="{Binding LAN}" FontSize="13" Foreground="DimGray"/>
                <Label Content="•" FontSize="13" Foreground="DimGray"/>
                <Label Margin="5,0,5,0" Content="USB:" FontSize="13" Foreground="DimGray"/>
                <Label Margin="0,0,5,0" Content="{Binding USB}" FontSize="13" Foreground="DimGray"/>
            </WrapPanel>
        </WrapPanel>
    </Grid>
</UserControl>
